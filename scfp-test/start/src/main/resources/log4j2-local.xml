<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" name="MyApp" verbose="true" monitorinterval="15"
               xmlns:xi="http://www.w3.org/2001/XInclude">
    <Properties>
        <property name="LOG_PATTERN" value="%-5level %date{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %l - %msg%n"/>
        <property name="COLORED_PATTERN" value="%-5level %highlight{%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %style{%logger{36}.%M()}{magenta} @%L - %msg%n}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=black, DEBUG=green bold, TRACE=blue}" />
        <property name="LOG_PATH" value="logs"/>

        <property name="APP_NAME">biz-service</property>
    </Properties>

    <xi:include href="log4j2_appender_base.xml" />

    <Loggers>

        <Root level="debug">
            <AppenderRef ref="Stdout" />
            <AppenderRef ref="DebugFile"/>
            <AppenderRef ref="ErrorFile"/>
        </Root>

        <!-- 按环境，需要开始 -->
        <Logger name="com.newhope.dt.crpt" level="warn"/>

        <!-- 第三方包屏蔽 -->
        <logger name="org.springframework" level="warn" />
        <logger name="org.mybatis" level="warn" />
        <logger name="com.baomidou" level="warn" />
        <logger name="com.zaxxer" level="warn" />
        <logger name="org.apache.ibatis" level="warn" />
        <logger name="com.alibaba.nacos" level="warn" />
        <logger name="com.netflix" level="warn" />

    </Loggers>

</Configuration>